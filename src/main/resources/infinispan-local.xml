<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:12.0 http://infinispan.org/schemas/infinispan-config-11.0.xsd"
        xmlns="urn:infinispan:config:11.0">

    <jgroups>
        <stack-file name="jgroupsStack" path="${infinispan.jgroups.config:default-configs/default-jgroups-udp.xml}"/>
    </jgroups>

    <cache-container default-cache="queryReplCache" statistics="true">
        <transport stack="jgroupsStack" lock-timeout="600000" cluster="default" />
        <jmx domain="Infinispan"/>

        <replicated-cache name="queryReplCache" remote-timeout="60000" statistics="true">
